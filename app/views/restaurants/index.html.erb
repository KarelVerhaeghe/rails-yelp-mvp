<h1>All restaurants</h1>
<ul>
  <% @restaurants.each do |restaurant| %>
  <li>
    <p><%= restaurant.name %></p>
    <p><%= restaurant.category %></p>

    <%= link_to "More details", restaurant_path(restaurant) %>
  </li>
  <% end %>
</ul>
<h2><%= link_to "Add restaurant", new_restaurant_path %></h2>
